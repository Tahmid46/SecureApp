<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ReminderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/medicine_layout"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/medNameRemId"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:hint="Medicine name"
                />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/datePickerId2"
            android:layout_marginTop="15dp"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/datePickerId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="How any Days"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/durationlayout"
            android:layout_marginTop="15dp"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/ethowmanydays"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Pick Start Date"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker1Id2"
            android:layout_marginTop="15dp"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/timePicker1Id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Pick Morning Time"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker2Id2"
            android:layout_marginTop="15dp"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/timePicker2Id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Pick Afternoon Time"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker3Id2"
            android:layout_marginTop="15dp"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/timePicker3Id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Pick Night Time"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/buttsave"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:text="Save"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>

</ScrollView>